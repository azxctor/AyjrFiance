<div class="modal fade modal-micro" id="checkModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
		<input type="hidden" id="unaudited_count" />
        <form id="check-form" action='$link.contextPath/web/audit/userinfo' method="POST">
            <div class="modal-content">
                <div class="modal-header">
					  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">审核</h4>
                </div>
                <div class="modal-body">
                    <input id="hidden_audit_type" name="memberType" type="hidden"/>
                    <input id="hidden_user_id" name="userId" type="hidden"/>
                    <input id="hidden_user_level" name="level" type="hidden" value="1"/>
##                    <input id="hidden_audit_passed" name="passed" type="hidden"/>
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-4 control-label required">是否通过审核</label>
                            <div class="col-sm-7" id="col-radio">
                                <input type="radio" name="passed" value="false" checked="checked"/>
                                    <span>&nbsp;不通过&nbsp;&nbsp;&nbsp;</span>
                                <input type="radio"  name="passed" value="true"/>
                                    <span>&nbsp;通过</span>
                            </div>
                        </div>
                    </div>
                    <div class="row check-reason">
                        <div class="form-group">
                            <label id="comments_id" class="col-sm-4 control-label required"><span class="nope">不</span>通过的原因</label>
                            <div class="col-sm-7">
                                <textarea id="audit_reject_reason" name="comments" style="width:100%;height:200px;" maxlength="255"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
					  <button type="submit" class="btn btn-primary btn-confirm btn-mf-primary">提交</button>
                    <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </form>
    </div>
</div>
