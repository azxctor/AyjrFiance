<link rel="stylesheet" type="text/css" href="$link.contextPath/assets/css/page/member/password_update.css"/>
<script src="$link.contextPath/assets/js/page/member/password_update.js" type="text/javascript"></script>	
<div class="row pd">
  <div class="col-md-6 col-md-offset-3">
  	  <div class="main-wrapper">
	  		<div class="main">
	  			 <form id="password-form" role="form" method="POST" 
					action="$link.contextPath/web/members/password/update">
                        <label class="control-label col-md-3" for="originalPassword">原登录密码</label>
    					  <div class="input-group col-md-9 form-item has-feedback">
    						  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
    						  <input type="password" class="form-control" id="originalPassword" name="originalPassword" minlength="1" maxlength="20" required placeholder="原始密码"/>
    					  </div>
						
						<label class="control-label col-md-3" for="newPassword">新登录密码</label>
					 	  <div class="input-group col-md-9 form-item has-feedback">
							  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
							  <input type="password" class="form-control" id="newPassword" name="newPassword" minlength="1" maxlength="20" required placeholder="新密码"/>
						  </div>
						  
						  <label class="control-label col-md-3" for="confirmPassword">再次输入密码</label>
						  <div class="input-group col-md-9 form-item has-feedback">
							  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
							  <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" equalTo="#newPassword" minlength="1" maxlength="20" required placeholder="再次输入密码"/>
						  </div>
						  <div class="form-btn-wrapper has-feedback">
								<button type="submit" class="btn btn-mf-primary" id="reg-btn">确定</button>
                          </div>
					</form>
	  		</div>

	  		<br/>
	  		<br/>
	  		<br/>
	  		<div class="main">
				<form id="user-form" role="form" method="POST" 
					action="$link.contextPath/web/members/nickname/update">
					<label class="control-label col-md-3">更改用户名</label>
				  	<div class="input-group col-md-9 form-item has-feedback">
					  <span class="input-group-addon"><i class="fa fa-smile-o"></i></span>
					  <input type="text" class="form-control" id="username" name="username" data-validate="{required:true,stringMinLength:4,stringMaxLength:15}" maxlength="15" required  placeholder="更改用户名"/>
				  	</div>
				 	<div class="form-btn-wrapper has-feedback">
						<button type="submit" class="btn btn-mf-primary" id="reg-btn">确定</button>
                  	</div>
				</form>		
	  		</div>
  	   </div>
  </div>
</div>


