<link rel="stylesheet" type="text/css" href="$link.contextPath/assets/css/page/escrow/update_password.css"/>
<script src="$link.contextPath/assets/js/page/escrow/update_password.js" type="text/javascript"></script>	
<div class="row pd">
  <div class="col-md-6 col-md-offset-3">
  	  <div class="main-wrapper">
	  		<div class="main">
	  			 <form id="password-form" role="form" method="POST" 
					action="$link.contextPath/web/esw/account/edit">
					
						<label class="control-label col-md-3" for="newPassword">原支付密码</label>
					 	  <div class="input-group col-md-9 form-item has-feedback">
							  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
							  <input type="password" class="form-control" id="originalPayPwd" name="originalPayPwd" minlength="1" maxlength="20" required placeholder="支付密码"/>
						  </div>
					
						<label class="control-label col-md-3" for="newPassword">新支付密码</label>
					 	  <div class="input-group col-md-9 form-item has-feedback">
							  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
							  <input type="password" class="form-control" id="newPayPwd" name="newPayPwd" minlength="1" maxlength="20" required placeholder="支付密码"/>
						  </div>
						  
						  <label class="control-label col-md-3" for="confirmPassword">确认新支付密码</label>
						  <div class="input-group col-md-9 form-item has-feedback">
							  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
							  <input type="password" class="form-control" id="confirmPayPwd" name="confirmPayPwd" equalTo="#newPayPwd" minlength="1" maxlength="20" required placeholder="确认支付密码"/>
						  </div>
						  
						  <label class="control-label col-md-3" for="mobile">手机号码</label>
					 	  <div class="input-group col-md-9 form-item has-feedback">
							  <span class="input-group-addon"><i class="fa fa-mobile-phone"></i></span>
							  <input type="text" class="form-control" id="mobile" name="mobile" data-validate="{required:true,mobilezh:true}"  maxlength="11" required placeholder="手机号码"/>
						  </div>
						  
						   <label class="control-label col-md-3" for="authCode"></label>
					 	  <div class="input-group col-md-9 form-item has-feedback">
							<div class="col-xs-6 no-padding">
								<div class="form-group has-feedback">
									<input type="text" class="form-control" name="authCode"  data-validate="{required:true}" maxlength="100"  placeholder="手机验证码"/>
					        	</div>
					        </div>
					        <div class="col-xs-6">
					        	 <a class="btn btn-default ui-button" id="captcha-link" disabled>获取手机验证码</a>
					        </div>
						</div>
						  <div class="form-btn-wrapper has-feedback">
								<button type="submit" class="btn btn-mf-primary" id="reg-btn">确定</button>
                          </div>
					</form>
	  		</div>
	  		<br/>
	  		<br/>
	  		<br/>
  	   </div>
  </div>
</div>


